<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainActivity_textview_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="스케줄러"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mainActivity_textview_titlesetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:text="제목설정"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textview_scheduler"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mainActivity_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:text="새 스케줄의 제목을 설정해주세요."
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/mainActivity_edittext_title"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:hint="제목입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textview_detail"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mainActivity_textview_localsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기간설정"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_edittext_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mainActivity_textview_localdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행을 떠나고 싶은 지역을 선택해주세요."
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textview_localsetting"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/mainActivity_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textview_localdetail"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/mainActivity_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivity_textview_localdetail"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mainActivity_button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>